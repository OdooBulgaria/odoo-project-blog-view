<template name="Rapport" id="rapport">



<t t-call="website.layout">
    
    <div id="wrap" class="oe_structure oe_empty">
      <div class="carousel slide mb32" id="myCarousel0" style="height: 320px;">
        <ol class="carousel-indicators hidden">
          <li class="active" data-slide-to="0" data-target="#myCarousel0"/>
        </ol>
        <div class="carousel-inner">
          <div class="item oe_img_bg active" style="background-image: url(&quot;http://odooutv.vertel.se/website/image/ir.attachment/42_248f2b1/datas&quot;);">
            <div class="container">
              <div class="row content">
                <div class="carousel-content col-sm-12 mt16 col-md-10">
                  <h1 style="text-align: center;">Martinskolans systematiska Kvalitetsarbete </h1>
                </div>
                <div class="carousel-img col-md-6 hidden-sm hidden-xs"/>
              </div>
            </div>
          </div>
        </div>
      </div>

<!--      Start Section Allämnt-->
      <section class="para_large">
        <div class="container">
          <div class="row">

        <h1>1 Allmänt</h1>
         <t t-foreach="self.get_posts('allmant',year)" t-as="post">
                <t t-raw="post.content" />
         </t>
        
            <t t-foreach="self.get_projects('allmant',year)" t-as="project">
                <span><h2><t t-esc="project.name"/></h2></span>
				<table>
                    <tr>
                    <th></th>
                    <th>Åtgärd</th>
                    <th>Ansvarig</th>
                    <th>Kontroll</th></tr>
                <t t-foreach="project.issue_ids" t-as="issue">
                    <tr>
                    <td><t t-esc="issue.name"/></td>
                    <td><t t-esc="issue.description"/></td>
                    <td>
<!--                    <t t-if="issue.project_id.partner_id" t-esc="issue.project_id.partner_id.name"></br></t>-->
                    <t t-esc="issue.user_id.name"/></td>
                    <td><t t-esc="issue.version_id.name"/></td>
                    </tr>
                </t>
				</table>
            </t>
            
          </div>
        </div>
      </section>
<!--      End Section Allämnt-->   



